<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.caitlin.crealchemy.DeleteActivity"
    android:background="@color/background">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="150dp"
        android:id="@+id/imageViewDeleteTitle"
        android:src="@drawable/delete"
        android:contentDescription="@string/content_description_delete_title"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/listViewElementsCreated"
        android:layout_marginTop="12dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="@dimen/buttonDoneWidth"
        android:layout_height="@dimen/buttonDoneHeight"
        android:text="@string/button_done"
        android:id="@+id/buttonDone"
        android:layout_gravity="center"
        android:background="@color/buttonBackground"
        android:textColor="#ff000000"
        android:textSize="20sp"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/listViewElementsCreated"
        android:background="@color/buttonBackground"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/imageViewDeleteTitle"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />
</RelativeLayout>
