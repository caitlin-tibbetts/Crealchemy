<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.caitlin.crealchemy.CreateActivity"
    android:background="@color/background"
    android:id="@+id/relativeLayout">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewCreate"
        android:src="@drawable/create"
        android:contentDescription="@string/content_description_create_title"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="400dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageViewPlaceholder"
        android:src="@drawable/placeholder"
        android:layout_alignTop="@+id/imageViewCreate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="110dp"
        android:layout_marginStart="100dp"
        android:contentDescription="@string/content_description_placeholder" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextName"
        android:layout_below="@+id/textViewElementName"
        android:layout_alignParentEnd="true"
        android:imeOptions="actionDone"
        android:layout_alignParentStart="true"
        android:inputType="text"
        tools:hint="@string/edittext_name"
        tools:ignore="LabelFor" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edittext_name"
        android:id="@+id/textViewElementName"
        android:layout_marginBottom="20dp"
        android:layout_alignBottom="@+id/imageViewPlaceholder"
        android:layout_centerHorizontal="true"
        tools:ignore="RelativeOverlap" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="201dp"
        android:layout_height="53dp"
        android:text="@string/button_parents"
        android:id="@+id/buttonCreateParents"
        android:layout_gravity="center"
        android:background="@color/buttonBackground"
        android:textColor="#ff000000"
        android:textSize="20sp"
        android:clickable="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="70dp"
        android:layout_height="@dimen/buttonDoneHeight"
        android:text="@string/button_done"
        android:id="@+id/buttonDone"
        android:layout_gravity="center"
        android:background="@color/buttonBackground"
        android:textColor="#ff000000"
        android:textSize="20sp"
        android:clickable="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
